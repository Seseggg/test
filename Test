public class Main {
    public static String calc(String input)  throws NumberFormatException {
        boolean romanOrArab = false;

        int result = 0;
        String[] inputSplit = input.split(" ");
        if (inputSplit.length != 3) {
        
        }

        Integer firstNumber = 0;
        Integer secondNumber = 0;
        try {
             firstNumber = Integer.valueOf(inputSplit[0]);
            secondNumber = Integer.valueOf(inputSplit[2]);
                    }
        catch (NumberFormatException e);

        if ((firstNumber < 0) || (firstNumber > 11) || (secondNumber < 0) || (secondNumber > 11)){
            return exception;

            String sign = inputSplit[1];
            switch (sign) {
                case "+" -> result = firstNumber + secondNumber;
                case "-" -> result = firstNumber - secondNumber;
                case "*" -> result = firstNumber * secondNumber;
                case "/" -> result = firstNumber / secondNumber;
                default -> {
                    return exception;
                }
        }
    }
    }
